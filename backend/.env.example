# =============================================================================
# PassOP Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill with secure values

MONGO_URI=mongodb://localhost:27017
DB_NAME=passop
ENCRYPTION_KEY=


# ALTERNATIVE: Use AUTH_SECRET for key derivation (less secure)
# If ENCRYPTION_KEY is not set, the system derives a key from SECRET/AUTH_SECRET
# Note: Changing this will make existing encrypted passwords unreadable!
SECRET=

AUTH_SECRET=

# Master password for app login (bcrypt hash)
AUTH_PASSWORD_HASH=

PORT=3000
NODE_ENV=production
